<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 修改默认的溢出菜单 -->
        <!--<item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--<style name="Base.Widget.Design.TabLayout" parent="android:Widget">-->
        <!--<item name="tabBackground">@drawable/tab_background_selector</item>-->
        <!--&lt;!&ndash;<item name="tabIndicatorColor">#ff00ff</item>&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="tabIndicatorHeight">2dp</item>&ndash;&gt;-->
    <!--</style>-->







    <!-- 进度条对话框主题 -->
    <style name="ProgressDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- popupwindow 动画 -->
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_out_anim</item>
    </style>

    <!-- 经销商/代理商页面item 主题 -->
    <style name="join_item_comm_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/join_item_height</item>
        <item name="android:layout_marginLeft">@dimen/join_right_left_margin</item>
        <item name="android:layout_marginRight">@dimen/join_right_left_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 经销商/代理商页面 标题文本 主题 -->
    <style name="join_item_comm_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/join_item_textSize</item>
    </style>

    <!-- 经销商/代理商页面 输入框 主题 -->
    <style name="join_item_comm_editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/join_item_textSize</item>
    </style>

    <!-- 经销商/代理商页面 上传图片item 主题 -->
    <style name="join_item_img_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/join_item_id_img_height</item>
        <item name="android:layout_margin">@dimen/join_right_left_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="join_item_img_pic_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#232</item>
    </style>


    <!-- 主页面 item 主题 -->
    <style name="main_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 主页面 item 图片主题 -->
    <style name="main_item_img_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 主页面 item 字体主题 -->
    <style name="main_item_text_style">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_item_textSize</item>
    </style>


</resources>
