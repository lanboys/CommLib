    <!-- 进度条对话框主题 -->
    <style name="ProgressDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- popupwindow 动画 -->
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_out_anim</item>
    </style>

    <!-- 经销商/代理商页面item 主题 -->
    <!--<item name="android:layout_marginLeft">@dimen/join_right_left_margin</item>-->
    <!--<item name="android:layout_marginRight">@dimen/join_right_left_margin</item>-->
    <style name="join_item_comm_style">

        <!-- 获取焦点，防止 editText 获取焦点 -->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:background">@color/main_color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/join_item_height</item>
        <item name="android:paddingRight">@dimen/join_right_left_margin</item>
        <item name="android:paddingLeft">@dimen/join_right_left_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 经销商/代理商页面 标题文本 主题 -->
    <style name="join_item_comm_textView_style">
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textColor">@color/main_color_text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/join_item_textView_textSize</item>
    </style>

    <!-- 经销商/代理商页面 输入框 主题 -->
    <!--<item name="android:layout_marginLeft">50dp</item>-->
    <style name="join_item_comm_editText_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/main_color_text_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/join_item_editText_textSize</item>
    </style>

    <!-- 经销商/代理商页面 上传图片item 主题 -->
    <!--<item name="android:layout_marginLeft">@dimen/join_right_left_margin</item>-->
    <!--<item name="android:layout_marginRight">@dimen/join_right_left_margin</item>-->
    <style name="join_item_img_style">
        <item name="android:background">@color/main_color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingRight">@dimen/join_right_left_margin</item>
        <item name="android:paddingLeft">@dimen/join_right_left_margin</item>
    </style>

    <!-- 经销商/代理商页面 上传图片 主题 -->
    <style name="join_item_img_pic_style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_height">@dimen/join_item_idCard_img_height</item>
        <item name="android:layout_width">@dimen/join_item_idCard_img_width</item>
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:background">#232</item>-->
    </style>


    <!--<item name="android:layout_margin">10sp</item>-->
    <!-- 主页面 item 主题 -->
    <style name="main_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 主页面 item 图片主题 -->
    <style name="main_item_img_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 主页面 item 字体主题 -->
    <style name="main_item_text_style">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_item_textSize</item>
    </style>


    <!-- 蓝色按钮 主题 -->
    <style name="btn_blue_style">
        <item name="android:layout_width">285dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/btn_background_selector</item>
        <item name="android:textColor">@color/main_color_white</item>
        <item name="android:textSize">@dimen/main_textSize_15sp</item>
    </style>
    <style name="join_item_img_textView_style" parent="join_item_comm_textView_style">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="join_item_comm_editText_styl1" parent="join_item_comm_editText_style">
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
