<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bing.lan.bing.ui.notAvailableDetail.NotAvailableDetail"
    tools:showIn="@layout/activity_not_available_detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_withdraw_money"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="金额"
                    android:textColor="@color/color_999"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_withdraw_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textColor="#8fc31f"
                    android:textSize="17sp"
                    tools:text="12.0"/>

            </RelativeLayout>
            <include layout="@layout/include_line_1"/>

            <!--提现金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="类型"
                    android:textColor="@color/color_999"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_withdraw_money_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <!--手续费-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="时间"
                    android:textColor="@color/color_999"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_poundage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <!--费率-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="流水"
                    android:textColor="@color/color_999"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <include

                layout="@layout/include_line_2"
            />

            <!--流水号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center_vertical"
            >
                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:text="说明"
                    android:textColor="@color/color_999"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_instruction"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="你正在申请提现操作，款项从平台到您的银行账户需要1-3个工作日，期间该笔资金暂时不可用"
                    android:textColor="@color/color_999"
                    android:textSize="14sp"/>


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
