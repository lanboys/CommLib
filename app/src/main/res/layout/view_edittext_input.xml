<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <EditText
        android:id="@+id/et_edittext_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="26dp"
        android:textColor="@color/et_text_color"
        android:textColorHint="@color/et_hint_color"
        android:textSize="13sp"
        tools:text="13456456464"/>

    <ImageView
        android:id="@+id/iv_edittext_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/tv_edittext_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/main_color_to_shallow_selector"
        android:textSize="13sp"
        android:visibility="gone"/>

</RelativeLayout>
