<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_container"
        style="@style/join_item_comm_style">

        <TextView
            android:id="@+id/tv_title"
            style="@style/join_item_comm_textView_style"
            android:drawablePadding="11dp"
            tools:text="标题"/>

        android:drawableLeft="@drawable/iv_mine_into"

        <EditText
            android:id="@+id/et_content"
            style="@style/join_item_comm_editText_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="12dp"
            tools:hint="标题提示语"/>
            <!--android:maxLength="10"-->

        <!--android:gravity="right|center_vertical"-->

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            tools:src="@drawable/iv_mine_into"/>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_line_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_height_gray_line"
        android:background="@color/main_color_white"
        android:paddingLeft="@dimen/join_right_left_margin"
        android:paddingRight="@dimen/join_right_left_margin"
    >
        <!--android:background="#e732d8"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color_gray_line"
        />
    </FrameLayout>


</LinearLayout>
