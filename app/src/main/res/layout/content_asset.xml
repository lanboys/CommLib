<?xml version="1.0" encoding="utf-8"?>
<com.bing.lan.comm.view.FlexibleScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_asset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bing.lan.bing.ui.asset.AssetActivity"
    tools:showIn="@layout/activity_asset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_use_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_blue"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="可用余额"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_use_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="30dp"
                android:text="1000"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_no_pending_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bd727372"
                android:gravity="center"
                android:padding="5dp"
                android:text="含待结算(0.00元)"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_take_money_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/main_color_white"
            android:gravity="center"
            android:padding="12dp"
            android:text="立即体现"
            android:textSize="20sp"/>


        <include
            layout="@layout/include_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_pending_pay_money"
            style="@style/join_item_comm_style">
            <TextView
                style="@style/join_item_comm_textView_style"
                android:drawableLeft="@drawable/icon_dianyidian"
                android:drawablePadding="15dp"
                android:text="待结算金额"/>

            <TextView
                android:id="@+id/tv_pending_pay_money"
                style="@style/join_item_comm_editText_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="right"
                android:hint="￥1111.00"
                android:paddingRight="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/iv_mine_into"/>
        </LinearLayout>

        <include layout="@layout/include_line_1"/>

        <LinearLayout
            android:id="@+id/ll_no_use_money"
            style="@style/join_item_comm_style">
            <TextView
                style="@style/join_item_comm_textView_style"
                android:drawableLeft="@drawable/icon_dianyidian"
                android:drawablePadding="15dp"
                android:text="待结算金额"/>

            <TextView
                android:id="@+id/tv_no_use_money"
                style="@style/join_item_comm_editText_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="right"
                android:hint="￥1111.00"
                android:paddingRight="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/iv_mine_into"/>
        </LinearLayout>


        <include
            layout="@layout/include_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</com.bing.lan.comm.view.FlexibleScrollView>
